		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-unicorn": "^60.0.0",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prop-types": "^15.8.1",
		"shx": "^0.4.0",
		"storybook": "^8.6.14",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0",
		"vite": "^6.3.0",
