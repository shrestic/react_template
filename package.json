{
	"name": "vite-react-boilerplate",
	"description": "A production ready, batteries included starter template for Vite + React projects",
	"keywords": [
		"vite",
		"react",
		"boilerplate",
		"starter",
		"template"
	],
	"license": "MIT",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"setup": "git init && npx husky init && shx rm .husky/pre-commit",
		"format": "prettier \"src/**/*.{ts,tsx}\" --write",
		"lint": "eslint --max-warnings 0",
		"lint:fix": "eslint --max-warnings 0 --fix",
		"dev": "vite",
		"generate-routes": "tsr generate",
		"test": "vitest run src/",
		"test:unit": "vitest src/",
		"test:unit:coverage": "vitest --coverage src/",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"commitlint": "commitlint --edit",
		"prepare": "husky"
	},
	"dependencies": {
		"@chakra-ui/react": "2",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@hookform/resolvers": "^5.2.1",
		"@nivo/bar": "^0.99.0",
		"@nivo/core": "^0.99.0",
		"@nivo/line": "^0.99.0",
		"@nivo/pie": "^0.99.0",
		"@tanstack/react-query": "^5.85.5",
		"@tanstack/react-router": "^1.131.27",
		"@tanstack/react-router-devtools": "^1.131.27",
		"@tanstack/react-table": "^8.21.3",
		"axios": "^1.11.0",
		"dayjs": "^1.11.13",
		"framer-motion": "^12.23.12",
		"i18next": "^25.4.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"i18next-http-backend": "^3.0.2",
		"msw": "^2.10.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-hook-form": "^7.62.0",
		"react-i18next": "^15.7.2",
		"react-icons": "^5.5.0",
		"zod": "^4.1.3",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@faker-js/faker": "^10.0.0",
		"@headlessui/react": "^2.2.7",
		"@heroicons/react": "^2.2.0",
		"@hookform/devtools": "^4.4.0",
		"@storybook/addon-actions": "8.6.14",
		"@tanstack/react-query-devtools": "^5.85.5",
		"@tanstack/react-table-devtools": "^8.21.3",
		"@tanstack/router-cli": "^1.131.27",
		"@tanstack/router-plugin": "^1.131.27",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.1.7",
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"@vitejs/plugin-react-swc": "^4.0.1",
		"@vitest/coverage-v8": "3.2.4",
